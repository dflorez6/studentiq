<p id="notice"><%= notice %></p>

<div class="">

</div>

<div class="content">

  <div class="row">
    <div class="col-12">
        <%= form_tag  do %>

      <% end %>
    </div>
  </div>

  <div class="row">
    <% @topics.each do |topic| %>
      <div class="col-12 col-sm-12 col-md-3 col-md-4">
        <div class="card" style="width: 18rem;">

          <% unless topic.image.blank? %>
            <%= image_tag topic.image, alt: "studentIQ | #{ topic.name }" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= topic.name %></h5>
            <p class="card-text"><%= topic.intro %></p>
            <%= link_to "View", topic_path(topic), class: 'btn btn-primary' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>

</div>

